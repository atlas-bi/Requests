{
  "name": "atlas-requests",
  "private": true,
  "sideEffects": false,
  "scripts": {
    "build": "run-s build:*",
    "build:css": "npm run generate:scss; npm run generate:css",
    "build:remix": "remix build",
    "build:server": "esbuild --platform=node --format=cjs ./server.ts --outdir=build --bundle",
    "dev": "npm run build; npm run saml:cert; run-p dev:* generate:scss quirrel",
    "dev:ldap": "docker run  -p 389:1389 -v \"$(pwd)/test/ldap/config\":/ldifs bitnami/openldap:latest",
    "dev:saml": "node ./test/saml-idp/bin/run.js --acsUrl http://localhost:3000/auth/asc --audience http://localhost:3000/login",
    "dev:build": "cross-env NODE_ENV=development npm run build:server -- --watch",
    "dev:scss": "cross-env NODE_ENV=development npm run generate:scss -- --watch",
    "dev:css": "cross-env NODE_ENV=development chokidar \"./app/**/*.{ts,tsx,jsx,js}\" \"./styles/main.css\" -c \"npm run generate:css\"",
    "dev:remix": "cross-env NODE_ENV=development remix watch",
    "dev:smtp": "docker run -p 3030:80 -p 25:25 -p 143:143 rnwood/smtp4dev",
    "dev:server": "cross-env NODE_ENV=development node --inspect --require ./node_modules/dotenv/config --require ./mocks ./build/server.js",
    "dev:search": "meilisearch",
    "format": "prettier --write .",
    "quirrel": "quirrel",
    "saml:cert": "openssl req -x509 -new -newkey rsa:2048 -nodes -subj '/C=US/ST=California/L=San Francisco/O=JankyCo/CN=Test Identity Provider' -keyout test/saml-idp/idp-private-key.pem -out test/saml-idp/idp-public-cert.pem -days 7300",
    "saml:setup": "git submodule update --rebase --remote; cd test/saml-idp/; npm install",
    "generate:scss": "sass styles/:styles/ --no-source-map",
    "generate:css": "postcss styles/**/*.css --base styles --dir app/styles --verbose",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
    "setup": "prisma generate && prisma migrate deploy && prisma db seed",
    "start": "cross-env NODE_ENV=production node ./build/server.js",
    "start:mocks": "cross-env NODE_ENV=production node --require ./mocks --require dotenv/config ./build/server.js",
    "test": "vitest",
    "test:e2e:dev": "start-server-and-test dev http://localhost:3000 \"npx cypress open\"",
    "pretest:e2e:run": "npm run build",
    "test:e2e:run": "cross-env PORT=8811 start-server-and-test start:mocks http://localhost:8811 \"npx cypress run\"",
    "typecheck": "tsc -b && tsc -b cypress",
    "validate": "run-p \"test -- --run\" lint typecheck test:e2e:run",
    "commit": "git add . && npm run pre-commit && git add . && cz --no-verify",
    "pre-commit": "lint-staged"
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "trailingComma": "all",
    "singleQuote": true,
    "semi": true,
    "importOrder": [
      "^@core/(.*)$",
      "^@server/(.*)$",
      "^@ui/(.*)$",
      "^[./]"
    ],
    "importOrderSeparation": true,
    "importOrderSortSpecifiers": true
  },
  "dependencies": {
    "@authenio/samlify-node-xmllint": "^2.0.0",
    "@fontsource/inter": "^4.5.14",
    "@fortawesome/fontawesome-svg-core": "^6.2.1",
    "@fortawesome/free-brands-svg-icons": "^6.2.1",
    "@fortawesome/free-regular-svg-icons": "^6.2.1",
    "@fortawesome/free-solid-svg-icons": "^6.2.1",
    "@fortawesome/react-fontawesome": "^0.2.0",
    "@lexical/clipboard": "^0.8.0",
    "@lexical/html": "^0.8.0",
    "@lexical/react": "^0.7.6",
    "@next-boost/hybrid-disk-cache": "^0.3.0",
    "@prisma/client": "^4.8.1",
    "@remix-run/express": "^1.9.0",
    "@remix-run/node": "^1.9.0",
    "@remix-run/react": "^1.10.0",
    "@remix-run/server-runtime": "^1.10.0",
    "bcryptjs": "^2.4.3",
    "better-sqlite3": "^8.0.1",
    "bulma": "^0.9.4",
    "bulma-list": "^1.2.0",
    "bulma-switch": "^2.0.4",
    "compression": "^1.7.4",
    "cross-env": "^7.0.3",
    "express": "^4.18.2",
    "express-prometheus-middleware": "^1.2.0",
    "imap": "^0.8.19",
    "isbot": "^3.6.3",
    "ldap-authentication": "^2.3.2",
    "lexical": "^0.7.6",
    "meilisearch": "^0.30.0",
    "morgan": "^1.10.0",
    "nodemailer": "^6.9.0",
    "prom-client": "^14.1.0",
    "quirrel": "^1.13.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "remix-image": "^1.4.0",
    "remix-image-sharp": "^0.1.4",
    "samlify": "^2.8.7",
    "sharp": "^0.31.3",
    "simple-ldap-search": "^3.1.2",
    "tiny-invariant": "^1.3.1"
  },
  "devDependencies": {
    "@faker-js/faker": "^7.6.0",
    "@fullhuman/postcss-purgecss": "^5.0.0",
    "@remix-run/dev": "^1.10.0",
    "@remix-run/eslint-config": "^1.10.0",
    "@semantic-release/changelog": "6.0.2",
    "@semantic-release/commit-analyzer": "9.0.2",
    "@semantic-release/exec": "6.0.3",
    "@semantic-release/git": "10.0.1",
    "@semantic-release/github": "8.0.7",
    "@semantic-release/npm": "9.0.2",
    "@semantic-release/release-notes-generator": "10.0.3",
    "@testing-library/cypress": "^9.0.0",
    "@testing-library/dom": "^8.19.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.4.3",
    "@trivago/prettier-plugin-sort-imports": "^4.0.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/compression": "^1.7.2",
    "@types/eslint": "^8.4.10",
    "@types/express": "^4.17.14",
    "@types/express-prometheus-middleware": "^1.2.1",
    "@types/morgan": "^1.9.3",
    "@types/node": "^18.11.9",
    "@types/nodemailer": "^6.4.7",
    "@types/react": "^18.0.25",
    "@types/react-dom": "^18.0.8",
    "@typescript-eslint/eslint-plugin": "^5.52.0",
    "@typescript-eslint/parser": "^5.52.0",
    "@vitejs/plugin-react": "^3.0.1",
    "@vitest/coverage-c8": "^0.27.0",
    "autoprefixer": "^10.4.13",
    "c8": "^7.12.0",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^7.6.0",
    "cookie": "^0.5.0",
    "cssnano": "^5.1.14",
    "cypress": "^12.3.0",
    "cz-conventional-changelog": "3.3.0",
    "dotenv": "^16.0.3",
    "esbuild": "^0.16.16",
    "eslint": "^8.34.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-remix": "^1.1.1",
    "happy-dom": "^8.1.3",
    "lint-staged": "^13.1.1",
    "msw": "^0.49.2",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.21",
    "postcss-cli": "^10.1.0",
    "postcss-preset-env": "^7.8.3",
    "prettier": "^2.8.2",
    "prisma": "^4.11.0",
    "sass": "^1.57.1",
    "semantic-release": "^20.1.0",
    "start-server-and-test": "^1.14.0",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.0",
    "typescript": "^4.9.5",
    "vite": "^4.0.4",
    "vite-tsconfig-paths": "^4.0.3",
    "vitest": "^0.27.0"
  },
  "engines": {
    "node": ">=16"
  },
  "prisma": {
    "seed": "ts-node --require tsconfig-paths/register prisma/seed.ts"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "**/*.{ts,css,less,scss,js,json,md,yaml,html}": [
      "npm run format"
    ]
  },
  "version": "1.0.0-rc.8"
}
